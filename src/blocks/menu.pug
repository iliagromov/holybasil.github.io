        +tabContent(text +' Завтрак', tabContentLv3, 'is-active')
        +tabContent(text +' Обед', tabContentLv3)
        +tabContent(text +' Ужин', tabContentLv3)
        +tabContent(text +' Перекус',tabContentLv3)

mixin tabContent(text, tabContentLv, active)
    .tab-content(class=tabContentLv, class=active)
        
        .page__img
            img(src="assets/img/img-menu-1.png", alt="")
            .page__text.page__text_bold COLE SLOW LIFE 
                span=text
        .page__img
            img.page__img(src="assets/img/img-menu-2.png", alt="")
            .page__text.page__text_bold CHOCOLATE WAFFLE
        .menu-kpfc
            .menu-kpfc_kcal 
                p.page__text.page__text_bold Калории
                p.page__text 1200 Ккал
            .menu-kpfc_protein
                p.page__text.page__text_bold Белки
                p.page__text 29 г
            .menu-kpfc_fat
                p.page__text.page__text_bold Жиры
                p.page__text 49 г
            .menu-kpfc_carbohydrates
                p.page__text.page__text_bold Углеводы
                p.page__text 11 г
            

